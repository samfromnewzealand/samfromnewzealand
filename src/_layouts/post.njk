---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="meta">
      <time datetime="{{ page.date | w3DateFilter }}">{{ page.date | dateDisplay }}</time>
      
      {% if tags %}
        <div class="tags">
          {% for tag in tags %}
            {% if tag != "post" %}
              <span class="tag">{{ tag }}</span>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <footer class="post-footer">
    <div class="author">
      <img src="/img/sam-portrait.jpg" alt="Sam from New Zealand" class="author-avatar">
      <div class="author-info">
        <h3>Sam from New Zealand</h3>
        <p>Writer, photographer, and web enthusiast from Aotearoa.</p>
      </div>
    </div>
  </footer>
</article>

<nav class="post-navigation">
  <div class="prev-next">
    {%- set previousPost = collections.post | getPreviousCollectionItem %}
    {%- set nextPost = collections.post | getNextCollectionItem %}

    {% if previousPost %}<a href="{{ previousPost.url }}" class="previous-post">← {{ previousPost.data.title }}</a>{% endif %}
    {% if nextPost %}<a href="{{ nextPost.url }}" class="next-post">{{ nextPost.data.title }} →</a>{% endif %}
  </div>
</nav>
