    <meta name="description" content="{% if description %}{{ description }}{% else %}Personal site of Sam from New Zealand{% endif %}">
    
    <!-- Favicon setup -->
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png">
